{
	"version": "0.2.0",
	"configurations": [
		{
			"name": "Launch Extension",
			"type": "extensionHost",
			"request": "launch",
			"runtimeExecutable": "${execPath}",
			"args": [
				"--extensionDevelopmentPath=${workspaceFolder}"
			],
			"debugWebviews": true,
			"sourceMaps": true,
			"outFiles": [
				"${workspaceFolder}/out/**/*.js"
			],
			"skipFiles": [
				"**/extensionHostProcess.js"
			]
		},
		{
			"type": "dezog",
			"request": "launch",
			"name": "TRS-80 Model 1 (Mock)",
			"remoteType": "trs80gp",
			"trs80": {
				"useMock": true,
				"registerFormat": "hex"
			},
			"zmac": [
				{
					"path": "${workspaceFolder}/test-trs80/test-program.bds"
				}
			],
			"startAutomatically": false,
			"rootFolder": "${workspaceFolder}",
			"topOfStack": "65535",
			"load": "${workspaceFolder}/test-trs80/test-program.cmd"
		},
		{
			"type": "dezog",
			"request": "launch",
			"name": "TRS-80 Model 3 (Mock)",
			"remoteType": "trs80gp",
			"trs80": {
				"hostname": "localhost",
				"port": 49152,
				"useMock": true,
				"registerFormat": "hex",
				"emulator": {
					"model": 3
				}
			},
			"zmac": [
				{
					"path": "${workspaceFolder}/test-trs80/test-program.bds"
				}
			],
			"startAutomatically": false,
			"rootFolder": "${workspaceFolder}",
			"topOfStack": "65535",
			"load": "${workspaceFolder}/test-trs80/test-program.cmd"
		},
		{
			"type": "dezog",
			"request": "launch",
			"name": "TRS-80 Model 3 - Real Emulator",
			"remoteType": "trs80gp",
			"trs80": {
				"machine": "model3",
				"port": 49152,
				"hostname": "localhost",
				"emulator": {
					"autoStart": true,
					"model": 3,
					"memorySize": 48
				}
			},
			"toolsPaths": {
				"trs80gp": ".dev-tools/trs80gp.app/Contents/MacOS/trs80gp"
			},
			"startAutomatically": true,
			"rootFolder": "${workspaceFolder}"
		},
		{
			"type": "dezog",
			"request": "launch", 
			"name": "TRS-80 Model 1 - Real Emulator",
			"remoteType": "trs80gp",
			"trs80": {
				"machine": "model1",
				"port": 49152,
				"hostname": "localhost",
				"emulator": {
					"autoStart": true,
					"model": 1,
					"memorySize": 48
				}
			},
			"toolsPaths": {
				"trs80gp": ".dev-tools/trs80gp.app/Contents/MacOS/trs80gp"
			},
			"startAutomatically": true,
			"rootFolder": "${workspaceFolder}"
		}
	]
}